# First import the modules
import os
import csv


csvpath = os.path.join("../","Resources", "budget_data.csv")


# Read the csv module
with open(csvpath) as csvfile:

    # CSV reader specifies delimiter and variable that holds contents
    csvreader = csv.reader(csvfile, delimiter=',')

    # Skip the two header rows first 
    next(csvreader)
    next(csvreader)

    # Initialize the two columns. How do I name the columns?

    months = 0
    total_profit = 0

    # Read each row of data after the header and count the number of months in the data
    for row in csvreader:
        months +=1
        total_profit = total_profit + float(row[1])


    print("Total Months:",(months))
    print("Total Profit: $",total_profit)

